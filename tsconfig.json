{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "es2015",
		"outDir": "build",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"~/*": [ "./src/*" ]
		}
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.d.ts"
	]
}
