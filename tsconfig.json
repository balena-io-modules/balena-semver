{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"outDir": "build",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"~/*": [ "./src/*" ]
		}
	},
	"include": [
		"src/**/*.ts"
	]
}
